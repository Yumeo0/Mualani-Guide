{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mualani-guide",
  "version": "0.1.0",
  "identifier": "mualani-guide.yumeo.dev",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn generate",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Mualani Guide",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "fs",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:path:default",
            "core:event:default",
            "core:webview:default",
            {
              "identifier": "fs:default",
              "allow": [
                {
                  "path": "**/*"
                },
                {
                  "path": "$RESOURCE/**/*"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ]
  }
}